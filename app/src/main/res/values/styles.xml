<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/color_app</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_app_background</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="colorButtonNormal">@color/color_app</item>
    </style>

    <style name="match_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="text_view_welcome">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_btn</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/space_layout_margin</item>
    </style>

    <style name="et_login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/material_grey_600</item>
        <item name="android:padding">@dimen/space_layout_padding</item>
        <item name="android:layout_margin">@dimen/space_layout_margin</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint">@color/color_app</item>
    </style>

    <style name="btn_login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_app</item>
        <item name="android:textColorHint">@color/material_grey_600</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/txt_size_btn</item>
        <item name="android:layout_margin">@dimen/space_layout_margin</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_app</item>
        <item name="android:textColorHint">@color/material_grey_600</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/txt_size_btn</item>
        <item name="android:layout_margin">@dimen/space_layout_margin</item>
    </style>

    <style name="btn_style_select_date">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textColorHint">@color/material_grey_600</item>
        <item name="android:textColor">@color/color_app</item>
        <item name="android:textSize">@dimen/txt_size_btn</item>
        <item name="android:layout_marginLeft">@dimen/space_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/space_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/space_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/space_layout_margin_small</item>
        <item name="android:drawableRight">@drawable/ic_action_action_event</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_style_select_date_time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textColorHint">@color/material_grey_600</item>
        <item name="android:textColor">@color/color_app</item>
        <item name="android:textSize">@dimen/txt_size_btn</item>
        <item name="android:layout_margin">@dimen/space_layout_margin_small</item>
        <item name="android:drawableRight">@drawable/ic_action_action_event</item>
        <item name="android:padding">@dimen/space_layout_padding_small</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/material_grey_300</item>
    </style>

    <style name="img_view_profile_pic">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:src">@drawable/ic_profile</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="text_view_header_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_view_medium</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="text_view_header_class">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_view_medium</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_view_header_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/lbl_size</item>
        <item name="android:textColor">@color/color_dark_grey</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding</item>
        <item name="android:paddingRight">@dimen/space_layout_padding</item>
        <item name="android:paddingTop">@dimen/space_layout_padding_small</item>
        <item name="android:paddingBottom">@dimen/space_layout_padding_small</item>
        <item name="android:drawablePadding">@dimen/space_layout_padding_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_view_profile_left_details">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textSize">@dimen/lbl_size</item>
        <item name="android:layout_margin">@dimen/space_layout_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/space_layout_padding</item>
    </style>

    <style name="text_view_profile_right_details">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/lbl_size</item>
        <item name="android:layout_margin">@dimen/space_layout_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/space_layout_margin</item>
    </style>

    <style name="text_view_label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_dark_grey</item>
        <item name="android:textSize">@dimen/lbl_size</item>
        <item name="android:layout_marginLeft">@dimen/space_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/space_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/space_layout_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/space_layout_margin</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textSize">@dimen/lbl_size</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_margin">@dimen/space_layout_margin_small</item>
        <item name="android:padding">@dimen/space_layout_padding</item>
    </style>

    <style name="text_view_event_list_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_dark_grey</item>
        <item name="android:textSize">@dimen/lbl_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/space_layout_padding</item>
        <item name="android:paddingRight">@dimen/space_layout_padding</item>
        <item name="android:paddingBottom">@dimen/space_layout_padding</item>
