        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/lbl_size</item>
        <item name="android:layout_marginLeft">@dimen/space_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/space_layout_margin</item>
