<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_style"
    android:orientation="vertical">

    <include layout="@layout/view_student_pager_item" />

    <LinearLayout
        style="@style/match_parent_style"
        android:layout_weight="0.8"
        android:orientation="vertical">


        <!-- Term Fees Selection Starts Here -->

        <LinearLayout
            style="@style/match_wrap_style"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_layout_margin"
            android:paddingRight="@dimen/space_layout_margin"
            android:paddingTop="@dimen/space_layout_margin_small">

            <TextView
                android:id="@+id/tv_select_term_fees"
                style="@style/text_view_label_teacher"
                android:gravity="left"
                android:text="@string/lbl_select_term" />

            <Spinner
                android:id="@+id/spinner_term_fees"
                style="@style/spinner_style">

            </Spinner>

        </LinearLayout>

        <!-- Term Fees Selection Ends Here -->

        <!-- payment detail Starts Here -->

        <LinearLayout
            android:id="@+id/ll_payment_details"
            style="@style/match_parent_style"
            android:visibility="gone"
            android:orientation="vertical">

            <ScrollView style="@style/match_parent_style">

                <LinearLayout
                    style="@style/match_parent_style"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/space_layout_margin"
                    android:paddingRight="@dimen/space_layout_margin"
                    android:paddingTop="@dimen/space_layout_margin_small">

                    <!-- Tution Fees  Starts Here -->

                    <LinearLayout
                        style="@style/match_wrap_style"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lbl_tution_fees"
                            style="@style/text_view_label_teacher"
                            android:text="@string/lbl_tutor_fees" />

                        <TextView
                            android:id="@+id/tv_tution_fees"
                            style="@style/text_view_label_teacher"
                            android:gravity="right"
                            android:text="5000" />

                    </LinearLayout>

                    <!-- Tution Fees Ends Here -->

                    <!-- Development Fund Starts Here -->

                    <LinearLayout
                        style="@style/match_wrap_style"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lbl_development_fund"
                            style="@style/text_view_label_teacher"
                            android:text="@string/lbl_development_fund" />

                        <TextView
                            android:id="@+id/tv_development_fund"
                            style="@style/text_view_label_teacher"
                            android:gravity="right"
                            android:text="3000" />

                    </LinearLayout>

                    <!-- Development Fund Ends Here -->

                    <!-- Exam Fees  Starts Here -->

                    <LinearLayout
                        style="@style/match_wrap_style"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lbl_exam_fees"
                            style="@style/text_view_label_teacher"
                            android:text="@string/lbl_exam_fees" />

                        <TextView
                            android:id="@+id/tv_exam_fees"
                            style="@style/text_view_label_teacher"
                            android:gravity="right"
                            android:text="1400" />

                    </LinearLayout>

                    <!-- Exam Fees Ends Here -->

                    <!-- Library Fees  Starts Here -->

                    <LinearLayout
                        style="@style/match_wrap_style"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lbl_library_fees"
                            style="@style/text_view_label_teacher"
                            android:text="@string/lbl_library_fees" />

                        <TextView
                            android:id="@+id/tv_library_fees"
                            style="@style/text_view_label_teacher"
                            android:gravity="right"
                            android:text="100" />

                    </LinearLayout>

                    <!-- Library Fees Ends Here -->

                    <View
                        style="@style/divider_style"
                        android:layout_marginTop="@dimen/space_layout_margin"/>

                    <!-- Total Fees  Starts Here -->

                    <LinearLayout
                        style="@style/match_wrap_style"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lbl_total_fees"
                            style="@style/text_view_label_teacher"
                            android:text="@string/lbl_total_fees" />

                        <TextView
                            android:id="@+id/tv_total_fees"
                            style="@style/text_view_label_teacher"
                            android:gravity="right"
                            android:text="9500" />

                    </LinearLayout>

                    <!-- Total Fees Ends Here -->

                    <!-- Paid Status  Starts Here -->

                    <LinearLayout
                        style="@style/match_wrap_style"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lbl_paid_status_fees"
                            style="@style/text_view_label_teacher"
                            android:text="@string/lbl_paid_status" />

                        <TextView
                            android:id="@+id/tv_paid_status"
                            style="@style/text_view_label_teacher"
                            android:gravity="right"
                            android:text="yes" />

                    </LinearLayout>

                    <!-- Paid Status Ends Here -->


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <include layout="@layout/view_list_empty" />

        <!-- payment detail Ends Here -->

    </LinearLayout>

</LinearLayout>

