<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap_style"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_title_notification"
            style="@style/match_wrap_style"
            android:paddingLeft="@dimen/space_layout_padding"
            android:paddingRight="@dimen/space_layout_padding"
            android:layout_marginTop="@dimen/space_layout_margin">

            <EditText
                android:id="@+id/et_title_notification"
                style="@style/et_login_style"
                android:drawablePadding="@dimen/space_layout_padding"
                android:hint="@string/lbl_title"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_notification"
            style="@style/match_wrap_style"
            android:paddingLeft="@dimen/space_layout_padding"
            android:paddingRight="@dimen/space_layout_padding"
            android:layout_marginTop="@dimen/space_layout_margin">

            <EditText
                android:id="@+id/et_notification"
                style="@style/et_login_style"
                android:gravity="top"
                android:drawablePadding="@dimen/space_layout_padding"
                android:hint="@string/lbl_message"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences|textMultiLine"
                android:layout_height="@dimen/spinnerWidth"
                android:scrollHorizontally="false"/>
        </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_send_notification"
                style="@style/btn_login_style"
                android:text="@string/lbl_send" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>