<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_style"
    android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap_style"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/space_layout_margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_view_label_teacher"
            android:layout_width="wrap_content"
            android:text="@string/lbl_select_all" />

        <CheckBox
            android:id="@+id/chk_box_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_layout_margin"
            android:paddingRight="@dimen/space_layout_margin"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <View style="@style/divider_style" />

</LinearLayout>

