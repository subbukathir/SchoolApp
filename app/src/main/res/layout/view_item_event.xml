<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/match_parent_style"
    android:padding="@dimen/space_layout_padding_small"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardElevation="2dp">

        <LinearLayout
            style="@style/match_wrap_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_event_name"
                style="@style/text_view_event_list_item"
                android:layout_marginTop="@dimen/space_layout_margin_small"
                android:textSize="@dimen/lbl_event_tile"
                android:textColor="@color/color_dark_grey"/>

            <TextView
                android:id="@+id/tv_event_organizer"
                style="@style/text_view_event_list_item"
                android:textColor="@color/color_green"
                android:textSize="@dimen/lbl_event_sub_tile"/>

            <LinearLayout
                style="@style/match_wrap_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_event_start_date"
                    style="@style/text_view_event_list_item"
                    android:gravity="left"
                    android:textSize="@dimen/lbl_event_text"
                    android:textColor="@color/color_light_grey" />

                <TextView
                    android:id="@+id/tv_event_end_date"
                    style="@style/text_view_event_list_item"
                    android:gravity="right"
                    android:textSize="@dimen/lbl_event_text"
                    android:visibility="gone"
                    android:textColor="@color/color_light_grey" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

