<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_style"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/material_grey_100"
        card_view:cardElevation="5dp">

        <LinearLayout
            style="@style/match_wrap_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_event_name"
                style="@style/text_view_event_list_item"
                android:textSize="@dimen/txt_size_btn"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_event_organizer"
                style="@style/text_view_event_list_item"
                android:textColor="@color/color_green" />

            <LinearLayout
                style="@style/match_wrap_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_event_start_date"
                    style="@style/text_view_event_list_item"
                    android:gravity="left"
                    android:textSize="@dimen/lbl_size_list_item"
                    android:textColor="@color/color_light_grey" />

                <TextView
                    android:id="@+id/tv_event_end_date"
                    style="@style/text_view_event_list_item"
                    android:gravity="right"
                    android:textSize="@dimen/lbl_size_list_item"
                    android:textColor="@color/color_light_grey" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

