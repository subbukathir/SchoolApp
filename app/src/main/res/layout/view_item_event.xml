<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_style"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/material_grey_100"
        card_view:cardElevation="10dp">

        <LinearLayout
            style="@style/match_wrap_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_event_name"
                style="@style/text_view_event_list_item"
                android:hint="@string/lbl_event_name"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                style="@style/match_wrap_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lbl_event_organizer"
                    style="@style/text_view_event_list_item"
                    android:layout_weight="1.2"
                    android:text="@string/lbl_organizer"
                    android:textColor="@color/color_green" />

                <TextView
                    android:id="@+id/tv_event_organizer"
                    style="@style/text_view_event_list_item"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="-7dp"
                    android:textColor="@color/color_green"/>

            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap_style"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lbl_event_start_date"
                    style="@style/text_view_event_list_item"
                    android:text="@string/lbl_start_date"
                    android:layout_weight=".9"
                    android:padding="3dp"
                    android:textColor="@color/color_light_grey" />
                <TextView
                    android:id="@+id/tv_event_start_date"
                    style="@style/text_view_event_list_item"
                    android:layout_weight="0.8"
                    android:padding="3dp"
                    android:layout_marginLeft="-5dp"
                    android:paddingLeft="-5dp"
                    android:textColor="@color/color_light_grey" />

                <TextView
                    android:id="@+id/tv_lbl_event_end_date"
                    style="@style/text_view_event_list_item"
                    android:text="@string/lbl_end_date"
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="-5dp"
                    android:textColor="@color/color_light_grey" />

                <TextView
                    android:id="@+id/tv_event_end_date"
                    style="@style/text_view_event_list_item"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="-5dp"
                    android:paddingLeft="-5dp"
                    android:padding="3dp"
                    android:textColor="@color/color_light_grey" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

