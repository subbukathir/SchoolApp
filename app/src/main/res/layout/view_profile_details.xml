<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.8"
    android:orientation="vertical">

    <!-- Label mobile starts here -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@color/color_white"
        android:orientation="vertical">

        <!-- Label mobile starts here -->

        <TextView
            android:id="@+id/tv_profile_mobile_number"
            style="@style/text_view_header_profile"
            android:drawableLeft="@drawable/ic_call_app"/>

        <View style="@style/divider_style"></View>

        <!-- Label mobile ends here -->

        <!-- Label email starts here -->

        <TextView
            android:id="@+id/tv_profile_email"
            style="@style/text_view_header_profile"
            android:drawableLeft="@drawable/ic_email_app" />

        <View style="@style/divider_style"></View>

        <!-- Label email ends here -->

        <!-- Label address starts here -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lbl_profile_address"
                    style="@style/text_view_header_profile"
                    android:drawableLeft="@drawable/ic_location_app"
                    android:text="@string/lbl_address" />

                <TextView
                    android:id="@+id/tv_profile_address"
                    style="@style/match_wrap_style"
                    android:paddingLeft="@dimen/space_layout_padding"
                    android:paddingRight="@dimen/space_layout_padding"
                    android:paddingBottom="@dimen/space_layout_padding"
                    android:layout_marginLeft="@dimen/space_layout_padding"
                    android:layout_marginRight="@dimen/space_layout_padding"
                    android:textSize="@dimen/lbl_size"
                    android:textColor="@color/color_black" />

            </LinearLayout>

        </LinearLayout>

        <!-- Label address starts here -->

    </LinearLayout>

</LinearLayout>