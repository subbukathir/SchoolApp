<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_style"
    android:layout_weight="1.4"
    android:orientation="vertical"
    android:elevation="@dimen/space_layout_margin"
    android:background="@color/windowBackground">

    <ImageView
        android:id="@+id/iv_profile"
        style="@style/img_view_profile_pic" />

    <LinearLayout
        style="@style/match_wrap_style"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#50000000"
        android:orientation="horizontal"
        android:padding="@dimen/space_layout_padding">

        <TextView
            android:id="@+id/tv_header_name"
            style="@style/text_view_header_name"
            android:layout_weight="1"
            android:text="@string/lbl_first_name"
            android:textSize="@dimen/lbl_profile_title" />
    </LinearLayout>

</RelativeLayout>

