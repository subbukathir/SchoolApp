<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_student_pager_item" />

    <LinearLayout
        style="@style/match_parent_style"
        android:layout_weight="0.8"
        android:orientation="vertical">


        <!-- Exam Selection For Result Starts Here -->

            <LinearLayout
                style="@style/match_wrap_style"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_select_exam_type"
                        style="@style/text_view_label"
                        android:gravity="left"
                        android:text="@string/lbl_select_exam_type" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_layout_margin"
                        android:layout_marginRight="@dimen/space_layout_margin">

                        <Spinner
                            android:id="@+id/spinner_exam_type"
                            style="@style/spinner_style"></Spinner>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        <!-- Exam Selection For Result Ends Here -->

       <include layout="@layout/view_exam_result_details" />

    </LinearLayout>

</LinearLayout>