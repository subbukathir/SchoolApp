<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_loading"
    style="@style/match_parent_style"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:visibility="gone">


    <ProgressBar
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_width"
        android:indeterminateTint="@color/color_app"
        android:indeterminateTintMode="src_in" />

    <TextView
        android:id="@+id/text_view_message"
        style="@style/match_wrap_style"
        android:layout_marginTop="@dimen/space_layout_margin"
        android:gravity="center"
        android:padding="@dimen/space_layout_padding"
        android:text="@string/lbl_loading"
        android:textSize="@dimen/lbl_size" />


</LinearLayout>

