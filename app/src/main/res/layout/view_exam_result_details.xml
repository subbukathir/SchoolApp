<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- List View  Header Starts Here -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_app"
        android:layout_marginTop="@dimen/space_layout_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lbl_exam_subject"
            style="@style/text_view_event_list_item"
            android:layout_marginTop="@dimen/space_layout_margin"
            android:textColor="@color/color_white"
            android:layout_weight="1"
            android:text="@string/lbl_subject" />

        <TextView
            android:id="@+id/tv_lbl_exam_marks"
            style="@style/text_view_event_list_item"
            android:layout_marginTop="@dimen/space_layout_margin"
            android:textColor="@color/color_white"
            android:layout_weight="1.2"
            android:text="@string/lbl_marks" />

        <TextView
            android:id="@+id/tv_lbl_exam_result"
            style="@style/text_view_event_list_item"
            android:layout_marginTop="@dimen/space_layout_margin"
            android:textColor="@color/color_white"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="@string/lbl_Result" />
    </LinearLayout>

    <!-- List View  Header Ends Here -->

    <!-- List  Header Ends Here -->

    <LinearLayout style="@style/match_parent_style">

        <com.daemon.oxfordschool.components.RecycleEmptyErrorView
            android:id="@+id/recycler_view_exam_result"
            style="@style/match_parent_style" />

        <include layout="@layout/view_list_empty"></include>

    </LinearLayout>

    <!-- List  Header Ends Here -->

</LinearLayout>