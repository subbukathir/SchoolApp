<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    style="@style/match_parent_style">

    <LinearLayout
        style="@style/match_parent_style"
        android:orientation="vertical">

        <RelativeLayout style="@style/match_parent_style">

            <LinearLayout
                android:id="@+id/ll_discipline_report"
                style="@style/match_parent_style"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_self_control"
                        style="@style/text_view_discipline_left"
                        android:layout_weight="1"
                        android:text="@string/lbl_self_control" />

                    <TextView
                        android:id="@+id/tv_self_control"
                        style="@style/text_view_discipline_right"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_obey_rules"
                        style="@style/text_view_discipline_left"
                        android:layout_weight="1"
                        android:text="@string/lbl_obey_rules" />

                    <TextView
                        android:id="@+id/tv_obey_rules"
                        style="@style/text_view_discipline_right"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_obey_staff"
                        style="@style/text_view_discipline_left"
                        android:layout_weight="1"
                        android:text="@string/lbl_obey_staff" />

                    <TextView
                        android:id="@+id/tv_obey_staff"
                        style="@style/text_view_discipline_right"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_dress_code"
                        style="@style/text_view_discipline_left"
                        android:layout_weight="1"
                        android:text="@string/lbl_dress_code" />

                    <TextView
                        android:id="@+id/tv_dress_code"
                        style="@style/text_view_discipline_right"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_time_keeping"
                        style="@style/text_view_discipline_left"
                        android:layout_weight="1"
                        android:text="@string/lbl_time_keeping" />

                    <TextView
                        android:id="@+id/tv_time_keeping"
                        style="@style/text_view_discipline_right"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_conduct"
                        style="@style/text_view_discipline_left"
                        android:layout_weight="1"
                        android:text="@string/lbl_conduct" />

                    <TextView
                        android:id="@+id/tv_conduct"
                        style="@style/text_view_discipline_right"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/view_list_empty" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>