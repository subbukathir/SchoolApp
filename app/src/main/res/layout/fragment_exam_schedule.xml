<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_student_profile_header" />

    <LinearLayout
        style="@style/match_parent_style"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_select_exam_type"
                style="@style/text_view_label"
                android:gravity="left"
                android:text="@string/lbl_select_exam_type" />

            <Spinner
                android:id="@+id/spinner_exam_type"
                android:layout_marginLeft="@dimen/space_layout_margin"
                android:layout_marginRight="@dimen/space_layout_margin"
                android:background="@drawable/abc_spinner_textfield_background_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            style="@style/match_parent_style">

            <com.daemon.oxfordschool.components.RecycleEmptyErrorView
                android:id="@+id/recycler_view_exam_list"
                style="@style/match_parent_style" />

            <include layout="@layout/view_list_empty"></include>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>