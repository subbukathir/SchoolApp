<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_style"
    android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_subject_name"
            style="@style/text_view_event_list_item"
            android:layout_weight="0.8"
            android:textColor="@color/color_black" />

    </LinearLayout>

    <LinearLayout
        style="@style/match_wrap_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lbl_AssignmentI"
            style="@style/text_view_event_list_item"
            android:layout_weight="1.4"
            android:text="@string/lbl_assignmentI" />

        <TextView
            android:id="@+id/tv_AssignmentI"
            style="@style/text_view_event_list_item"
            android:layout_weight="0.8"
            android:textColor="@color/color_black" />

    </LinearLayout>

    <LinearLayout
        style="@style/match_wrap_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lbl_AssignmentII"
            style="@style/text_view_event_list_item"
            android:layout_weight="1.4"
            android:text="@string/lbl_assignmentII" />

        <TextView
            android:id="@+id/tv_AssignmentII"
            style="@style/text_view_event_list_item"
            android:layout_weight="0.8"
            android:textColor="@color/color_black" />

    </LinearLayout>


    <View style="@style/divider_style" />

</LinearLayout>

