<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_parent_style"
    android:orientation="vertical">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        style="@style/match_wrap_style"
        app:mcv_selectionColor="#00F"
        app:mcv_showOtherDates="all" />

    <LinearLayout
        android:id="@+id/ll_view_calendar"
        style="@style/match_wrap_style"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_layout_margin"
        android:elevation="@dimen/space_layout_margin"
        android:padding="@dimen/space_layout_padding">

        <TextView
            android:id="@+id/text_view_cal_header"
            style="@style/text_view_header_name"
            android:textSize="@dimen/lbl_profile_title"
            android:textColor="@color/color_black"
            android:text="Something"/>

        <TextView
            android:id="@+id/text_view_cal_description"
            style="@style/text_view_label"
            android:layout_marginTop="@dimen/space_layout_margin"
            android:textColor="@color/color_black"
            android:text="Something"/>

    </LinearLayout>

</LinearLayout>