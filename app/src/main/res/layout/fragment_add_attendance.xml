<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- Select All Starts Here -->

    <LinearLayout
        style="@style/match_wrap_style"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/space_layout_margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lbl_select_all"
            style="@style/text_view_label_teacher"
            android:layout_width="wrap_content"
            android:text="@string/lbl_select_all" />

        <CheckBox
            android:id="@+id/chk_box_all_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/space_layout_margin" />

    </LinearLayout>

    <!-- Select All Ends Here -->

    <!-- List Starts -->

    <RelativeLayout
        style="@style/match_parent_style"
        android:layout_weight="1">

        <com.daemon.oxfordschool.components.RecycleEmptyErrorView
            android:id="@+id/recycler_view_attendance"
            style="@style/match_parent_style" />

        <include layout="@layout/view_list_empty"></include>

    </RelativeLayout>

    <!-- List Ends -->

    <Button
        android:id="@+id/btn_attendance_save"
        style="@style/btn_login_style"
        android:text="@string/lbl_save" />


</LinearLayout>