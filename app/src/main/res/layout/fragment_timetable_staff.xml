<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/view_section_class_selector" />

    <RelativeLayout
        style="@style/match_parent_style"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:padding="@dimen/space_layout_padding">

        <GridView
            android:id="@+id/grid_view"
            style="@style/match_parent_style"
            android:layout_marginTop="@dimen/space_layout_margin"
            android:numColumns="6">

        </GridView>

        <include layout="@layout/view_list_empty" />

    </RelativeLayout>
</LinearLayout>