<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_student_profile_header" />

    <LinearLayout
        style="@style/match_parent_style"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            style="@style/match_wrap_style"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space_layout_padding_small"
            android:paddingLeft="@dimen/space_layout_padding"
            android:paddingRight="@dimen/space_layout_padding"
            android:paddingTop="@dimen/space_layout_padding_small">

            <TextView
                android:id="@+id/tv_lbl_select_date"
                style="@style/text_view_label"
                android:gravity="center_vertical"
                android:text="@string/lbl_select_date" />

            <Button
                android:id="@+id/btn_select_date"
                style="@style/btn_login_style"
                android:layout_weight="0.7" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_parent_style">

            <com.daemon.oxfordschool.components.RecycleEmptyErrorView
                android:id="@+id/recycler_view_homework"
                style="@style/match_parent_style" />

            <include layout="@layout/view_list_empty"></include>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>