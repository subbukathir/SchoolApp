<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/match_wrap_style"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_add_subject_name"
                style="@style/match_wrap_style"
                android:layout_marginTop="@dimen/space_layout_margin"
                android:paddingLeft="@dimen/space_layout_padding"
                android:paddingRight="@dimen/space_layout_padding">

                <EditText
                    android:id="@+id/et_add_subject_name"
                    style="@style/et_login_style"
                    android:drawablePadding="@dimen/space_layout_padding"
                    android:hint="@string/lbl_subject_name"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_layout_padding"
            android:paddingRight="@dimen/space_layout_padding">

            <TextView
                android:id="@+id/text_view_lbl_is_core"
                style="@style/match_wrap_style"
                android:padding="@dimen/space_layout_padding"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/lbl_is_auxiliary" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_compat"
                style="@style/match_parent_style"
                android:layout_weight="1"
                android:paddingLeft="@dimen/space_layout_padding"
                android:paddingRight="@dimen/space_layout_padding" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/img_Status_height"
            android:paddingLeft="@dimen/space_layout_padding"
            android:paddingRight="@dimen/space_layout_padding">

            <Button
                android:id="@+id/btn_add_subjet"
                style="@style/btn_login_style"
                android:text="ADD" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>