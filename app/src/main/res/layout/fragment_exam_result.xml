<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_student_profile_header" />

    <LinearLayout
        style="@style/match_parent_style"
        android:layout_weight="0.8"
        android:orientation="vertical">


        <!-- Exam Selection For Result Starts Here -->

        <LinearLayout
            style="@style/match_wrap_style"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_select_exam_type"
                    style="@style/text_view_label"
                    android:gravity="left"
                    android:text="@string/lbl_select_exam_type"
                    android:textSize="@dimen/lbl_size_list_item" />

                <Spinner
                    android:id="@+id/spinner_exam_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_layout_margin"
                    android:layout_marginRight="@dimen/space_layout_margin"
                    android:background="@drawable/abc_spinner_textfield_background_material"></Spinner>
            </LinearLayout>

        </LinearLayout>

        <!-- Exam Selection For Result Starts Here -->

        <!-- List View  Header Starts Here -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lbl_exam_subject"
                style="@style/text_view_label"
                android:layout_weight="1"
                android:text="@string/lbl_subject" />

            <TextView
                android:id="@+id/tv_lbl_exam_marks"
                style="@style/text_view_label"
                android:layout_weight="1.2"
                android:text="@string/lbl_marks" />

            <TextView
                android:id="@+id/tv_lbl_exam_result"
                style="@style/text_view_label"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="@string/lbl_Result" />
        </LinearLayout>

        <!-- List View  Header Ends Here -->

        <LinearLayout style="@style/match_parent_style">

            <com.daemon.oxfordschool.components.RecycleEmptyErrorView
                android:id="@+id/recycler_view_exam_result"
                style="@style/match_parent_style" />

            <include layout="@layout/view_list_empty"></include>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>