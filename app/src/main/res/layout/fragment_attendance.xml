<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_student_profile_header" />

    <LinearLayout
        style="@style/match_parent_style"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lbl_select_month"
                style="@style/text_view_label"
                android:text="@string/lbl_month" />

            <Spinner
                android:id="@+id/spinner_month"
                style="@style/spinner_style" />
        </LinearLayout>

        <include layout="@layout/view_list_empty" />

        <LinearLayout
            android:id="@+id/ll_attendance_details"
            android:visibility="visible"
            style="@style/match_wrap_style"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lbl_no_of_working_days"
                    style="@style/text_view_label"
                    android:text="@string/lbl_working_days" />

                <TextView
                    android:id="@+id/tv_working_days"
                    style="@style/text_view_label" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lbl_no_of_present_days"
                    style="@style/text_view_label"
                    android:text="@string/lbl_present_days" />

                <TextView
                    android:id="@+id/tv_present_days"
                    style="@style/text_view_label" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lbl_percentage"
                    style="@style/text_view_label"
                    android:text="@string/lbl_percentage" />

                <TextView
                    android:id="@+id/tv_percentage"
                    style="@style/text_view_label" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>