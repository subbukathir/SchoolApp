<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:useLevel="true"
            android:thickness="5sp" >

            <gradient
                android:startColor="@color/color_app"
                android:endColor="@color/color_app"
                android:centerColor="@color/color_app"
                android:type="sweep"/>
        </shape>
        </rotate>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:useLevel="true"
                android:thickness="3.5sp" >

                <gradient
                    android:startColor="@color/material_grey_600"
                    android:endColor="@color/material_grey_100"
                    android:centerColor="@color/material_grey_300"
                    android:type="sweep"/>
            </shape>
        </rotate>
    </item>
</layer-list>